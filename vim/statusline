" Status line options

" Git status function
function! EvilStatusline()
    if isdirectory("../**/.git") || isdirectory(".git")
        let branch = fugitive#head()
        return "[Git: " . branch . "]"
    endif
    return ""
endfunction

" Always show statusline
set laststatus=2
let g:last_mode=""

" Display mode
set statusline=%{EvilMode()}

" File name
set statusline+=\ %t

" File type
set statusline+=\ [%Y]

" Git status
set statusline+=\ %{EvilStatusline()}

" Separator, align right
set statusline+=\ %=

" Current line / totale number of lines
set statusline+=\ L:\ %l/%L

" Column number
set statusline+=\ C:\ %c

" vim: ft=vim
