####################
# Nginx, MySql
####################
alias nginxon='sudo nginx'
alias nginxoff='sudo nginx -s stop'
alias nginxre='sudo nginx -s stop; sudo nginx '
alias servon='sudo nginx; mysql.server start'
alias servoff='sudo nginx -s stop; mysql.server stop'
alias servre='sudo nginx -s stop; sudo nginx; mysql.server restart'

####################
# Laravel
####################
alias artisan='php artisan'
alias laravel='~/.composer/vendor/bin/laravel'
