# ALIAS
alias li='ls -alh --color'
alias c='clear'
alias r='rm -rf'
alias autoclean='sudo apt autoclean'
alias autoremove='sudo apt autoremove -y'
alias install='sudo apt install -y'
alias purge='sudo apt purge'
alias update='sudo apt update'
alias upgrade='sudo apt update; sudo apt upgrade -y'
take () {
	mkdir $1
	cd $1
}

####################
# Nginx, MySql
####################
alias servon='sudo service nginx start; sudo service mysql start; sudo service php7.0-fpm start; sudo service postfix start'
alias servoff='sudo service nginx stop; sudo service mysql stop; sudo service php7.0-fpm stop; sudo service postfix stop'
alias servre='sudo service nginx restart; sudo service mysql restart; sudo service php7.0-fpm restart; sudo service postfix restart'

####################
# Laravel
####################
alias artisan='php artisan'

